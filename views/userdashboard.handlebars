{{#section 'css'}}
<!-- CSS USER -->
<link rel="stylesheet" href="/dist/css/user.css"/>
{{/section}}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        User Dashboard
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="userdashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row" id="user-summary-widgets">
        
    </div>
    <!-- .row-->
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="box box-primary" id="assignment-summary-box">
                <div class="box-header with-border">
                    <h3 class="box-title">Your Assignments</h3>

                    <div class="box-tools pull-right">
                        <div class="has-feedback">
                            <input type="text" class="form-control input-sm" placeholder="Search Any" id="search-global">
                            <span class="glyphicon glyphicon-search form-control-feedback"></span>
                        </div>
                    </div>
                    <!-- /.box-tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="mailbox-controls">
                        <!-- Check all button -->
                        <!--<button type="button" class="btn btn-default btn-sm checkbox-toggle"><i class="fa fa-square-o"></i></button>-->
                        <div class="btn-group">
                            <label for="projects">Filter By Tracks : </label>
                            <select onchange="getUserAssignmentSummary()" class="input-sm" id="projects">
                                {{#each projects as |proj|}}
                                    <option value="{{proj}}">{{proj}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="btn-group">
                            <label for="filter">Filter By Relation : </label>
                            <select onchange="getUserAssignmentSummary()" class="input-sm" id="relations">
                                {{#each relations as |rel|}}
                                    <option value="{{rel}}">{{rel}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <!-- /.btn-group -->
                        <button type="button" class="btn btn-default btn-sm" onclick="getUserAssignmentSummary()"><i class="fa fa-refresh"></i></button>
                        <div class="pull-right">
                           <!-- 1-50/200
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm"><i class="fa fa-chevron-left"></i></button>
                                <button type="button" class="btn btn-default btn-sm"><i class="fa fa-chevron-right"></i></button>
                            </div>-->
                            <!-- /.btn-group -->
                        </div>
                        <!-- /.pull-right -->
                    </div>
                    <div class="table-responsive" id="assignment-summary">
                        
                    </div>
                   
                    <!-- /.mail-box-messages -->
                </div>
                <!-- /.box-body -->
                 <div class="overlay hide">
                        <div class="loading-text">Track summary is loading!</div>
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
            </div>
        </div>
    </div>
     <!-- Assign modal-->
    {{> relatemodal}}
     <!-- detail modal-->
</section>

{{#section 'script'}}
<!-- DASHBOARD JS -->
<script src="/dist/js/dashboarduser.js"></script>
{{/section}}
