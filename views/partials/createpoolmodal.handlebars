<div class="modal fade" id="createPoolModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content box" id="createpool-modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                <h4 class="modal-title" role="createpool-modal-title">Create Pool </h4>
            </div>
            <form method="POST" action="admin/createpool" id="create-pool-form">
                <div class="modal-body">
                        <div role="message"></div>
                        <div class="form-group">
                            <label for="breadcrump">Run directory</label>
                            <ol id="breadcrump" class="breadcrumb" style="margin-bottom:0;">
                                <span class="glyphicon glyphicon-home"></span>
                                <li><a href="#" id="project-home">run</a></li>
                                <li><a href="#">run</a></li>
                            </ol>
                        </div>
                        <div class="form-group">
                                <label for="row-count">Row Count</label>
                                <input class="form-control" id="row-count" type="number" name="rowCount" value="50"/>
                        </div>
                        <div class="form-group">
                                <label for="row-count">Delimiter</label>
                                <select class="form-control" id="delimiter" name="delimiter" value=" ">
                                    <option value=" ">WhiteSpace(" ")</option>
                                    <option value="\t" selected="true">Tab(\t)</option>
                                </select>
                        </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="create-pool" onclick="confirm(this)" class="btn btn-primary">Create Pool</button>
                </div>
            </form>
            <div class="overlay hide">
                <div class="loading-text">Pool is being created!</div>
                <i class="fa fa-refresh fa-spin"></i>
            </div>
        </div>
    </div>
</div>