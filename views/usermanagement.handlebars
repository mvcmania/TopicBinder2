{{#section 'css'}}

{{/section}}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Dashboard
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/">
                <i class="fa fa-dashboard"></i> Home</a>
        </li>
        <li class="active">UserManagement</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- .row-->
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="box box-primary" id="topic-summary-box">
                <div class="box-header with-border">
                    <h3 class="box-title">User Management</h3>
                    <!-- /.box-tools -->
                </div>
                <div id="main-alert"></div>
                <form id="user-management-form" method="POST" action="admin/user/"></form>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover user-management-table">
                        <tbody>
                            <tr>
                                <th>Avatar</th>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>IsAdmin</th>
                            </tr>
                        {{#each users as |usr|}}
                            <tr>
                                <td>
                                    <img src="/dist/img/{{usr.avatar}}" class="img-circle img-bordered-sm user-img" alt="User Image">
                                </td>
                                <td>
                                    {{usr.name}}
                                </td>
                                <td>
                                    {{usr.username}}
                                </td>
                                <td>
                                    {{usr.email}}
                                </td>
                                <td>
                                    
                                    <label class="switch" toggle="{{usr.isactive}}">
                                        {{#if usr.isactive}}
                                            <input id="isactive_{{usr._id}}"   data-id="{{usr._id}}" onclick="toggleBox(this)" checked type="checkbox">
                                        {{else}}
                                            <input id="isactive_{{usr._id}}"  data-id="{{usr._id}}" onclick="toggleBox(this)" type="checkbox">
                                        {{/if}}
                                        <span class="slider round"></span>
                                    </label>
                                </td>
                                <td>
                                     <label class="switch" toggle="{{usr.isadmin}}">
                                        {{#if usr.isadmin}}
                                            <input id="isadmin_{{usr._id}}" data-id="{{usr._id}}" onclick="toggleBox(this)" checked type="checkbox">
                                        {{else}}
                                            <input id="isadmin_{{usr._id}}" data-id="{{usr._id}}" onclick="toggleBox(this)" type="checkbox">
                                        {{/if}}
                                        <span class="slider round"></span>
                                    </label>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </form>
                <!-- /.box-body -->
                <div class="overlay hide">
                    <div class="loading-text">Users are loading!</div>
                    <i class="fa fa-refresh fa-spin"></i>
                </div>
            </div>
        </div>
    </div>
</section>
{{#section 'script'}}
<!-- CHART -->
<script src="/dist/js/jquery-confirm.min.js"></script>
<script src="/dist/js/usermanagement.js"></script>
{{/section}}