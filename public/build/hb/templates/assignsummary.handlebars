  <table id="summary-table" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="no-sort">TOPIC ID</th>
            <th class="no-sort">DOCUMENT</th>
            <th class="no-sort">SEARCH ENGINE</th>
            <th class="no-sort">SCORE</th>
            <th class="no-sort">INDEX</th>
            <th class="no-sort">ASSIGNED DATE</th>
            <th class="no-sort">IS RELATED</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each assignments as |asg|}}
            <tr aria-describedby="topic-row">
                <td class="mailbox-name">{{#each asg.topic.topicid as |tpid|}}{{tpid}}{{/each}}</td>
                <td>{{#each asg.topic.document as |doc|}}{{doc}}{{/each}}</td>
                <td>{{#each asg.topic.searchEngine as |sengine|}}{{sengine}}{{/each}}</td>
                <td>{{#each asg.topic.score as |score|}}{{score.$numberDecimal}}{{/each}}</td>
                <td>{{#each asg.topic.index as |ind|}}{{ind}}{{/each}}</td>
                <td>{{asg.assignedDate}}</td>
                <td aria-describedby="{{asg.isRelated}}">
                    {{#eq asg.isRelated 2}}
                        <label class="badge bg-yellow">&nbsp;</label>                    
                    {{/eq}}
                    {{#eq asg.isRelated 1}}
                        <label class="badge bg-green">&nbsp;</label>                     
                    {{/eq}}
                    {{#eq asg.isRelated 0}} 
                        <label class="badge bg-red">&nbsp;</label>                    
                    {{/eq}}
                </td>
                <td>
                    <button  type="button" role="modal" data-index="{{@index}}" data-target="#relate-modal" data-toggle="modal" data-documentid="{{#each asg.topic.document as |doc|}}{{doc}}{{/each}}" data-assignmentid="{{asg._id}}" data-topicid="{{#each asg.topic.topicid as |tpid|}}{{tpid}}{{/each}}"  class="btn btn-xs btn-flat btn-success"><i class="fa fa-plus"></i>
                   Action
                    </button>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>