  <table id="summary-table" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th style="width:10%">#Status</th>
            <th>TOPIC ID</th>
            <th>COUNT</th>
            <th class="no-sort"></th>
        </tr>
    </thead>
    <tbody>
        {{#each pools as |pool|}}
            <tr >
                <td class="disabled" data-order="{{pool.status}}"><label class="badge {{pool.status}}">&nbsp;</label></td>
                <td class="mailbox-name">{{pool.topic}}</td>
                <td id="td-{{pool.topic}}">{{pool.count}}</td>
                
                    <td>
                        {{#ne pool.remains 0}}
                            <div class="btn-group">
                                <button onclick="launchAssignModal(this)" type="button" role="assign"  data-remain="{{pool.remains}}" data-topicid="{{pool.topic}}"  class="btn btn-xs btn-flat btn-success"><i class="fa fa-plus"></i>
                                        Assign
                                </button>
                            </div>
                        {{/ne}}
                    </td>  
                 
            </tr>
        {{/each}}
    </tbody>
</table>