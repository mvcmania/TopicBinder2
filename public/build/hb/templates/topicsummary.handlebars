  <table class="table table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>TOPIC ID</th>
            <th>COUNT</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each pools as |pool|}}
            <tr class="{{pool.status}} disabled">
                <td></td>
                <td class="mailbox-name">{{pool._id}}</td>
                <td id="td-{{pool._id}}">{{pool.count}}</td>
                <td>
                   <button onclick="launchAssignModal(this)" type="button" role="assign" data-topicid="{{pool._id}}" class="btn btn-xs btn-default"><i class="fa fa-plus"></i>
                   Assign
                    </button>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>